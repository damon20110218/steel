$("#categoryId0").combobox({
			url:'/basic/category',
		    valueField:'categoryId',
		    textField:'steelName',
		    onSelect: function(rec){
		    	$("#specId0").combobox({
		    		url:'/basic/spec?categoryId='+rec.categoryId,
				    valueField:'specId',
				    textField:'thickness',
		    	});
		    }
		})
$("#categoryId" + flag).combobox({
				url:'/basic/category',
			    valueField:'categoryId',
			    textField:'steelName',
			    onSelect: function(rec){
			    	$("#specId" + flag).combobox({
			    		url:'/basic/spec?categoryId='+rec.categoryId,
					    valueField:'specId',
					    textField:'thickness',
			    	});
			    }
			})